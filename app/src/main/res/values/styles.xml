<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PlusMinusButton">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Dice">
        <item name="android:layout_width">@dimen/_90sdp</item>
        <item name="android:layout_height">@dimen/_90sdp</item>
    </style>

    <style name="RollButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_70sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DiceNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_30ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DiceSum">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_40ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>